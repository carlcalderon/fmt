{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es5",
    "declaration": true,
    "esModuleInterop": true,
    "outDir": "./lib/bundle",
    "declarationDir": "./lib/types",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "strictNullChecks": true
  },
  "include": [
    "./src/**/*"
  ]
}
